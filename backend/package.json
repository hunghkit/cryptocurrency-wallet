{
  "name": "cryptocurrency-backend",
  "version": "0.0.1",
  "description": "The back end for cryptocurrency wallet",
  "main": "lib/index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "start": "node lib",
    "eslint": "eslint --fix ./src",
    "prebuild": "yarn babel-version",
    "build": "babel src --out-dir lib --ignore \"src/**/*.spec.js\",\"src/**/*.test.js\"",
    "format": "prettier --write \"**/*.+(js|jsx|json)\"",
    "babel-version": "babel --version"
  },
  "keywords": [
    "bitcoin",
    "cryptocurrency",
    "wallet"
  ],
  "author": "Hoang Hung (hunghk.it@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.10.3",
    "apollo-server": "^2.15.0",
    "apollo-server-express": "^2.15.0",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "bitcoinjs-lib": "^5.1.10",
    "blockchain.info": "^2.12.1",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
    "graphql-playground-middleware-express": "^1.7.18",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "mongoose": "^5.9.20",
    "randomstring": "^1.1.5",
    "sanitizer": "^0.1.3",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "babel-eslint": "^10.1.0",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint"
    }
  }
}
